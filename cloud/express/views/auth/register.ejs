<% include ../includes/start.ejs %>
<div class="container">
  <div class="header">Registration</div>
  <form class="form" action="/register">
    <input name="_csrf" type="hidden" value="<%= csrf %>"/>
    <input name="name" class="input" type="text" placeholder="Name" required step="1" autofocus/>
    <input name="email" class="input" type="email" placeholder="Email" required step="2"/>
    <input name="password" class="input" type="password" placeholder="Password" required step="3"/>
    <input name="password_confirm" class="input" type="password" placeholder="Confirm Password" required step="4"/>
    <textarea name="biography" class="input textarea" placeholder="Biography" required step="5"></textarea>
    <input class="submit" type="submit" value="Start Tutoring" />
  </form>
</div>
<% include ../includes/end.ejs %>
